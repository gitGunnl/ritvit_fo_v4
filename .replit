
# Main configuration
modules = ["nodejs-20", "web"]

# Nix package manager configuration
[nix]
channel = "stable-24_05"

# Deployment configuration
[deployment]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "npm install && cp -r public/other_media dist/other_media && npm run build"]
run = ["sh", "-c", "npm run start"]

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

# Ensure static files are served correctly
[[deployment.rewrites]]
from = "/other_media/*"
to = "/other_media/*"

# Add proper MIME type for MP3 files
[[deployment.responseHeaders]]
path = "*.mp3"
name = "Content-Type"
value = "audio/mpeg"

[[deployment.responseHeaders]]
path = "/other_media/*.mp3"
name = "Content-Type" 
value = "audio/mpeg"

# Port configuration
[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 8082
externalPort = 8082

[workflows]
runButton = "Run Dev Server"

[[workflows.workflow]]
name = "Run Dev Server"
author = 36104266
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --port 3001 --host 0.0.0.0 --strictPort"


